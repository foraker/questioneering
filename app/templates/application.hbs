<h2 id="title">{{title}}</h2>

{{outlet}}

models:

Site
  title
  has_many questions
  has_many resolutions

Question
  content
  belongs_to site
  has_many answers

Answer
  content
  belongs_to question
  belongs_to resolution

Resolution
  has_many answers
  content

